@model Payem.Models.PaymentList

@{
    ViewData["Title"] = "Details";
}

<style>
    .details-container {
        background-color: white;
        padding: 40px;
        max-width: 700px;
        margin: 50px auto;
        border-radius: 12px;
        box-shadow: 0 4px 12px rgba(0, 128, 0, 0.08);
        font-family: 'Segoe UI', sans-serif;
        color: #2e2e2e;
    }

    .details-title {
        font-size: 2rem;
        color: #2e7d32;
        margin-bottom: 20px;
    }

    .details-subtitle {
        font-size: 1.2rem;
        margin-bottom: 25px;
        color: #555;
    }

    dl {
        margin-bottom: 20px;
    }

    dt {
        font-weight: bold;
        color: #2e7d32;
    }

    dd {
        margin-left: 0;
        margin-bottom: 10px;
    }

    .action-links a {
        color: #2e7d32;
        font-weight: 500;
        text-decoration: none;
        margin-right: 15px;
    }

        .action-links a:hover {
            text-decoration: underline;
        }
</style>

<div class="details-container">
    <h1 class="details-title">@ViewData["Title"]</h1>

    <p class="details-subtitle">Here are the details of your payment list:</p>

    <dl>
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.TotalAmount)</dt>
        <dd>@Html.DisplayFor(model => model.TotalAmount)</dd>
    </dl>

    <div class="action-links">
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>

