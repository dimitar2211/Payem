@model Payem.Models.PaymentList

@{
    ViewData["Title"] = "Delete";
}

<style>
    .delete-container {
        background-color: white;
        padding: 40px;
        max-width: 700px;
        margin: 50px auto;
        border-radius: 12px;
        box-shadow: 0 4px 12px rgba(0, 128, 0, 0.08);
        font-family: 'Segoe UI', sans-serif;
        color: #2e2e2e;
    }

    .delete-title {
        font-size: 2rem;
        color: #c62828;
        margin-bottom: 10px;
    }

    .delete-subtitle {
        font-size: 1.1rem;
        margin-bottom: 30px;
        color: #555;
    }

    dl {
        margin-bottom: 30px;
    }

    dt {
        font-weight: bold;
        color: #2e7d32;
        margin-top: 10px;
    }

    dd {
        margin-left: 0;
        margin-bottom: 10px;
    }

    .delete-actions {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .delete-button {
        background-color: #e53935;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .delete-button:hover {
            background-color: #c62828;
        }

    .back-link {
        color: #2e7d32;
        text-decoration: none;
        font-weight: 500;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="delete-container">
    <h1 class="delete-title">Delete</h1>
    <p class="delete-subtitle">Are you sure you want to delete this payment list?</p>

    <dl>
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.TotalAmount)</dt>
        <dd>@Html.DisplayFor(model => model.TotalAmount)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="delete-actions">
            <input type="submit" value="Delete" class="delete-button" />
            <a asp-action="Index" class="back-link">Back to List</a>
        </div>
    </form>
</div>

